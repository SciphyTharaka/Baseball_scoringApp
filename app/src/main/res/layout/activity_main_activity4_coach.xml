<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="20dp"
android:gravity="center"
tools:context=".MainActivity4_coach">


<TextView
    android:id="@+id/admin_welcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome to Coach Account"
    android:textSize="20sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginBottom="24dp" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/view_player_profile_coach"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Player Profiles"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/view_leader_board_coach"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View Leaderboard"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/edit_practice_schedule_coach"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Edit/View Practice Schedule"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/watch_live_score_coach"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Watch live score"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/previous_game_stat_coach"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Previous games stat"
        android:layout_marginBottom="12dp" />
</LinearLayout>
</LinearLayout>
